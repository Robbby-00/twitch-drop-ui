{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2015"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "composite": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "skipLibCheck": true,
  },
  "exclude": [ 
    "frontend"
  ]
}
